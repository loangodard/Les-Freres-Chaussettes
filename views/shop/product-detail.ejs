<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product-detail.css">
<%- include('../includes/facebookPixel.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(prod.active){%>
        <div class='container product-detail'>
            <div class="row">
                <div class='col-12 col-sm-12 col-md-12 col-lg-6 photo'>

                    <!--CAROUSEL-->
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <%let i = 0%>
                            <%for(j of prod.imagesUrl){%>
                            <li data-target="#carouselExampleIndicators" data-slide-to="<%i%>" <%if(i==0){%>class="active"<%}%>></li>
                            <%i=i+1%>
                            <%}%>
                        </ol>
                        <div class="carousel-inner">
                            <%let l = 0%>
                            <%for(p of prod.imagesUrl){%>
                            <div class="carousel-item <%if(l==0){%>active<%}%>">
                                <img class="d-block w-100" src="<%=p%>">
                            </div>
                            <%l=l+1}%>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <!--/CAROUSEL-->

                </div>

                <div class='col-12 col-sm-12 col-md-12 col-lg-6 detail'>
                    <div class="desc">
                        <br>
                        <h1 style="text-align: center;"><%= prod.title %></h1>
                        <p style='text-align: justify;'><%= prod.description %></p>
                    </div>
                    <div class='action'>
                        <h2>
                            <%= prod.price %> â‚¬
                        </h2>
                        <form action="/cart" method="POST">
                            <label>Taille</label>
                            <select name="size" id="size">
                                <%for(s of prod.size){%>
                                <option value="<%= s %>">EU <%= s %></option>
                                <%}%>
                            </select>
                            <br>
                            <%- include('../includes/add-to-cart.ejs') %>
                        </form>
                        
                    </div>
                    <p style="color:grey; font-size: 15px;">Toutes nos chaussettes sont en polyestere</p>
                </div>
            </div>

        </div>
        <%}else{%>
        <div class='container'>
            <h2>Ce produit n'est plus disponible...</h2>
        </div>
        <%}%>
<br><br>
        <%- include('../includes/end.ejs') %>